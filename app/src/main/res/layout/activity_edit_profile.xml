<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.EditProfile"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/my_profile"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/myProfile">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/first_name"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:textColor="#D37AE3"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic"
                android:textColorHint="#D37AE3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
android:layout_gravity="center"                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/last_name"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColorHint="#D37AE3"
                android:textColor="#D37AE3"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear2">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="48dp"
        android:layout_gravity="center"                android:src="@drawable/ic_baseline_email_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/email"
        android:textColor="@color/text"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold|italic" />
</LinearLayout>


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#D37AE3"
                android:hint="@string/email"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="#D37AE3"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear3">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
android:layout_gravity="center"                android:src="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/city"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/city"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="#D37AE3"
                android:textColorHint="#D37AE3"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic"
               />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear4">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
android:layout_gravity="center"                android:src="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/country"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etCountry"
                android:textColorHint="#D37AE3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/country"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="#D37AE3"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear5">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
android:layout_gravity="center"                android:src="@drawable/ic_baseline_phone_24" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/phone_number"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/phone_number"
                android:textColorHint="#D37AE3"
                android:textColor="#D37AE3"
                android:inputType="number"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear6">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
android:layout_gravity="center"                android:src="@drawable/ic_gender" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/gender"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etGender"
                android:textColorHint="#D37AE3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/gender"
                android:textColor="#D37AE3"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear7">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
android:layout_gravity="center"                android:src="@drawable/ic_baseline_snippet_folder_24" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/national_id"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etNationalID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/national_id"
                android:textColor="#D37AE3"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:textColorHint="#D37AE3"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold|italic" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear8">


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="48dp"
android:layout_gravity="center"                android:src="@drawable/ic_baseline_date_range_24" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                android:text="@string/BirthDate"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etBOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D37AE3"
                android:textSize="@dimen/_14sdp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColorHint="#D37AE3"
                android:textStyle="bold|italic"
                android:autofillHints="Date"
                android:hint="@string/Date"
                android:inputType="date"
                android:padding="10dp"

                />
        </LinearLayout>

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnshape"
            android:text="@string/update"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear9" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>