<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/DoctorName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="Doctor name"
                android:enabled="false"
                android:gravity="center"
                android:paddingStart="10dp"
                android:hint="@string/doctor_name"
                style="@style/EditText_RecyclerView"

                />
            <TextView
                android:id="@+id/DoctorAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:autofillHints="Doctor Address"
                android:enabled="false"
                android:hint="@string/doctor_address"
                style="@style/EditText_RecyclerView"
                />

            <TextView
                android:id="@+id/DoctorPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="Doctor phone"
                android:enabled="false"
                android:gravity="center"
                android:paddingStart="10dp"
                android:hint="@string/doctor_phone"
                style="@style/EditText_RecyclerView"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="#C32525"
                    android:onClick="accept_action"
                    android:text="Accept"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="#194EB8"
                    android:text="Reject"
                    app:backgroundTint="@null" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
